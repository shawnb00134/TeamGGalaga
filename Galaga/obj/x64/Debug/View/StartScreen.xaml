<Page
    x:Class="Galaga.View.StartScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
            <TextBlock Text="Galaga" FontSize="36" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" />
            <Button x:ConnectionId='2' x:Name="startGameButton" Content="Start Game" Width="200" Height="50"                               />
            <Button x:ConnectionId='3' x:Name="viewHighScoresButton" Content="View High Scores" Width="200" Height="50"                                    />
            <Button x:ConnectionId='4' x:Name="resetHighScoresButton" Content="Reset High Scores" Width="200" Height="50"                                     />
        </StackPanel>
    </Grid>
</Page>

