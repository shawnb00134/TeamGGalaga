<local:BaseSprite
    x:Class="Galaga.View.Sprites.EnemySpecialSprite"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Galaga.View.Sprites"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="60"
    d:DesignWidth="50"
    Height="60"
    Width="50">

    <UserControl.Resources>
        <SolidColorBrush x:Key="CockpitColor" Color="White" />
        <SolidColorBrush x:Key="SymbolColor" Color="LightGreen" />
        <SolidColorBrush x:Key="PrimaryColor" Color="Gray" />
        <SolidColorBrush x:Key="EngineColor" Color="OrangeRed" />
    </UserControl.Resources>

    <Canvas>
        <Line X1="2" Y1="10" X2="2" Y2="46" Stroke="{ThemeResource PrimaryColor}" StrokeThickness="4" />
        <Line X1="5" Y1="20" X2="5" Y2="35" Stroke="{ThemeResource PrimaryColor}" StrokeThickness="4" />
        <Line X1="12" Y1="23" X2="12" Y2="32" Stroke="{ThemeResource PrimaryColor}" StrokeThickness="11" />
        <Line X1="48" Y1="10" X2="48" Y2="46" Stroke="{ThemeResource PrimaryColor}" StrokeThickness="4" />
        <Line X1="45" Y1="20" X2="45" Y2="35" Stroke="{ThemeResource PrimaryColor}" StrokeThickness="4" />
        <Line X1="38" Y1="23" X2="38" Y2="32" Stroke="{ThemeResource PrimaryColor}" StrokeThickness="11" />

        <Line X1="20" Y1="10" X2="20" Y2="46" Stroke="{ThemeResource PrimaryColor}" StrokeThickness="5" />
        <Line X1="30" Y1="10" X2="30" Y2="46" Stroke="{ThemeResource PrimaryColor}" StrokeThickness="5" />
        <Line X1="25" Y1="0" X2="25" Y2="60" Stroke="{ThemeResource PrimaryColor}" StrokeThickness="5" />
        <Line X1="25" Y1="24" X2="25" Y2="36" Stroke="{ThemeResource SymbolColor}" StrokeThickness="3" />
        <Line X1="20" Y1="30" X2="30" Y2="30" Stroke="{ThemeResource SymbolColor}" StrokeThickness="3" />
        <Line X1="25" Y1="36" X2="25" Y2="40" Stroke="{ThemeResource CockpitColor}" StrokeThickness="3" />
        <Line X1="25" Y1="0" X2="25" Y2="6" Stroke="{ThemeResource EngineColor}" StrokeThickness="5" />
    </Canvas>
</local:BaseSprite>

