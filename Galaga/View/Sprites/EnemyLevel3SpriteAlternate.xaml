<local:BaseSprite
    x:Class="Galaga.View.Sprites.EnemyLevel3SpriteAlternate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Galaga.View.Sprites"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="60"
    d:DesignWidth="50"
    Height="60"
    Width="50">

    <UserControl.Resources>
        <SolidColorBrush x:Key="ShipBaseColor" Color="LightGray" />
        <SolidColorBrush x:Key="MainAccentColor" Color="Red" />
        <SolidColorBrush x:Key="SecondaryAccentColor" Color="Green" />
        <SolidColorBrush x:Key="TertiaryAccentColor" Color="DarkOrange" />
    </UserControl.Resources>

    <Canvas>
        <Polygon Points="25,30 50,40 25,60 0,40" Fill="{StaticResource MainAccentColor}" />
        <Polygon Points="25,0 40,40 25,55 10,40" Fill="{StaticResource ShipBaseColor}" />
        <Polygon Points="25,10 30,25 25,30 20,25" Fill="{StaticResource SecondaryAccentColor}" />
        <Polygon Points="12,35 25,40 38,35 25,50 " Fill="{StaticResource TertiaryAccentColor}" />
    </Canvas>
</local:BaseSprite>
