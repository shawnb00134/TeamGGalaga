<local:BaseSprite
    x:Class="Galaga.View.Sprites.EnemyMissile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Galaga.View.Sprites"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="30"
    d:DesignWidth="30"
    Height="30"
    Width="30">

    <UserControl.Resources>
        <SolidColorBrush x:Key="MainColor" Color="Aqua" />
        <SolidColorBrush x:Key="AccentColor" Color="White" />
    </UserControl.Resources>

    <Canvas>
        <Ellipse Height="30" Width="30" Fill="{StaticResource MainColor}" />
        <Polygon Points="15,15 12,13 15,0" Fill="{StaticResource AccentColor}" />
        <Polygon Points="15,15 18,12 30,15" Fill="{StaticResource AccentColor}" />
        <Polygon Points="15,15 18,18 15,30" Fill="{StaticResource AccentColor}" />
        <Polygon Points="15,15 12,18 0,15" Fill="{StaticResource AccentColor}" />
    </Canvas>
</local:BaseSprite>